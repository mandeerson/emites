<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{dd-MM-yyyy HH:mm:ss.SSS} [%-5level] %logger{10} [%thread]: %m%n</pattern>
		</encoder>
	</appender>
	<logger name="deng" level="DEBUG" />
	<root level="INFO">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>